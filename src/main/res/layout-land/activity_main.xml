<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Label_TextView_Latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="45dp"
        android:text="@string/latitude"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52" />

    <TextView
        android:id="@+id/TextView_Latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/Label_TextView_Latitude"
        app:layout_constraintTop_toBottomOf="@+id/Label_TextView_Latitude" />

    <TextView
        android:id="@+id/Label_TextView_Longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="@string/longitude"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/Label_TextView_Latitude"
        app:layout_constraintEnd_toStartOf="@+id/Label_TextView_City"
        app:layout_constraintStart_toEndOf="@+id/Label_TextView_Latitude" />

    <TextView
        android:id="@+id/Label_TextView_City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:text="@string/city"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Label_TextView_Latitude" />

    <TextView
        android:id="@+id/TextView_Longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/Label_TextView_Longitude"
        app:layout_constraintTop_toBottomOf="@+id/Label_TextView_Longitude" />

    <TextView
        android:id="@+id/textView_City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/Label_TextView_City"
        app:layout_constraintTop_toBottomOf="@+id/Label_TextView_City" />

</androidx.constraintlayout.widget.ConstraintLayout>